<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Blogs</title>
    <link rel="stylesheet" href="/styles/main.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" >
    <link href="https://fonts.googleapis.com/css2?family=Merriweather:ital,wght@0,300;0,400;0,700;0,900; 1,300;1,400;1,700;1,900&display=swap" rel="stylesheet">
</head>
<body>
    <div class="container">
        <h1>My Blog</h1>
        <a id="newPostBtn" href="/new">New Post</a>
        <ul id="List">
          <% posts.forEach(post=> { %>
            <li>
              <h2>
                <%=post.title%>
              </h2>
              <p>
                <%=post.content%>
              </p>
              <small class="author">By: <%=post.author%> </small>
              <small class="date">
                <%=post.date %>
              </small>
              
              <a class="edit" href="/edit/<%= post.id %>">Edit</a>
              <a class="delete" onclick="confirmDelete('<%= post.id %>')" href="/posts/delete/<%= post.id %>">Delete</a>
            </li>
            <script>
               function confirmDelete(id) {
           
            const confirmation = window.confirm("Are you sure you want to delete this post?");
            
            if (confirmation) {
                
                window.location.href = "/api/posts/" + id;
            } else {
                
                return;
            }
        }
            </script>
            <% }); %>
        </ul>
      </div>
</body>
</html>